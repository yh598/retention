import pandas as pd
from catboost import CatBoostClassifier, Pool

# âœ… Load data (Replace this with your actual DataFrame)
# pandas_df = pd.read_csv("your_data.csv")  # Uncomment if reading from a CSV

# âœ… Define target variable and feature columns
target_col = "churn_flag_imputed"  # Update with your actual target column name
feature_cols = [col for col in pandas_df.columns if col != target_col]

X = pandas_df[feature_cols]
y = pandas_df[target_col]

# âœ… Identify categorical columns
categorical_cols = X.select_dtypes(include=["object", "category"]).columns.tolist()

# ğŸ” Debugging Step 1: Print feature information
print("ğŸ”¹ Feature Columns:", feature_cols)
print("ğŸ”¹ Categorical Columns:", categorical_cols)
print(f"ğŸ”¹ X Shape: {X.shape}, y Shape: {y.shape}")
print(f"ğŸ”¹ Data Types:\n{X.dtypes}")

# âœ… Ensure categorical columns are not empty
if not categorical_cols:
    raise ValueError("âŒ Categorical columns list is empty or None. Check data preprocessing.")

# âœ… Handle Missing Values in Features & Target
print("ğŸ” Checking for missing values...\n")
print("Missing values in X:\n", X.isnull().sum())
print("Missing values in y:\n", y.isnull().sum())

# Fill missing values in features
X = X.fillna(-999)  # Replace NaNs with a placeholder for numerical features

# Fill missing values in categorical columns with 'missing'
X[categorical_cols] = X[categorical_cols].fillna("missing")

# Fill missing values in target column (if necessary)
if y.isnull().sum() > 0:
    y = y.fillna(y.mode()[0])  # Replace NaNs in target with most frequent value

# âœ… Ensure categorical variables are strings
for col in categorical_cols:
    X[col] = X[col].astype(str)

# ğŸ” Debugging Step 2: Re-check missing values after fixes
print("âœ… Missing values after preprocessing:\n", X.isnull().sum())

# âœ… Use Pool Object for Robust Data Handling
train_pool = Pool(data=X, label=y, cat_features=categorical_cols)

# âœ… Initialize and Train CatBoost Classifier
catboost_model = CatBoostClassifier(iterations=200, depth=6, learning_rate=0.1, verbose=0)
catboost_model.fit(train_pool)

# âœ… Get Feature Importances
feature_importance = catboost_model.get_feature_importance()
feature_importance_df = pd.DataFrame({"Feature": feature_cols, "Importance": feature_importance})

# âœ… Sort by importance and display top 10 features
feature_importance_df = feature_importance_df.sort_values(by="Importance", ascending=False)
print("ğŸ“Š Top 10 Most Important Features:\n", feature_importance_df.head(10))

# âœ… Display feature importance as a table
import ace_tools as tools
tools.display_dataframe_to_user(name="Feature Importance", dataframe=feature_importance_df)
